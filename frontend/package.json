{
  "name": "ammms",
  "version": "1.0.0",
  "description": "Advanced Music Metadata Management System",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "build": "vite build && electron-builder",
    "lint": "eslint --ext .js,.vue src",
    "format": "prettier --write \"src/**/*.{js,vue,css}\"",
    "test": "vitest"
  },
  "build": {
    "appId": "com.ammms.app",
    "productName": "AMMMS",
    "mac": {
      "category": "public.app-category.music",
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns"
    }
  },
  "dependencies": {
    "vue": "^3.4.15",
    "vuex": "^4.1.0",
    "vue-router": "^4.2.5",
    "@vueuse/core": "^10.7.2",
    "axios": "^1.6.7",
    "electron-store": "^8.1.0",
    "tailwindcss": "^3.4.1",
    "wavesurfer.js": "^7.7.0",
    "@headlessui/vue": "^1.7.18",
    "@heroicons/vue": "^2.1.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.12",
    "vitest": "^1.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.21.1",
    "prettier": "^3.2.5",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35"
  },
  "author": "Your Name",
  "license": "MIT"
}