# Database Configuration
DB_TYPE=postgresql  # or sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ammms
DB_USER=postgres
DB_PASSWORD=your_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# API Keys
ACOUSTID_API_KEY=your_acoustid_key
MUSICBRAINZ_APP_NAME=AMMMS
MUSICBRAINZ_VERSION=1.0
DISCOGS_TOKEN=your_discogs_token
BEATPORT_CLIENT_ID=your_beatport_client_id
BEATPORT_CLIENT_SECRET=your_beatport_client_secret
LASTFM_API_KEY=your_lastfm_key
LASTFM_API_SECRET=your_lastfm_secret

# Application Settings
APP_NAME=AMMMS
APP_ENV=development  # development, testing, production
DEBUG=true
SECRET_KEY=your_secret_key
API_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000"]

# File Storage
UPLOAD_DIR=uploads
TEMP_DIR=temp
MAX_UPLOAD_SIZE=100000000  # 100MB in bytes

# Processing Settings
AUDIO_FORMATS=["mp3", "wav", "flac", "m4a", "ogg"]
ENABLE_NEURAL_PROCESSING=true
BATCH_SIZE=32
NUM_WORKERS=4

# Cache Settings
CACHE_TTL=3600  # 1 hour in seconds
METADATA_CACHE_TTL=86400  # 24 hours in seconds

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log